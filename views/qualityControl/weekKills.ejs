<!DOCTYPE html>
<html lang="en">
<%- include('../partials/headfile'); %>
<link rel="stylesheet" href="/stylesheets/botList.css" />
<!-- Include DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<!-- Bootstrap JS and Popper.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bot Hunting Data</title>
</head>

<body>
    <%- include('../partials/navbar'); %>

    <!-- Add your buttons here -->
    <div class="btn-group mb-4" role="group" aria-label="Button group">
        <a href="/deRoute/botList" class="btn btn-success" style="font-weight: bold; color: black;">All Bots</a>
        <a href="/deRoute/topWorlds" class="btn btn-secondary" style="font-weight: bold; color: black;">World Kills</a>
        <a href="/qcRoute/commonlyVisitedWorlds" class="btn btn-danger" style="font-weight: bold; color: black;">Top Worlds</a>
        <a href="/deRoute/EquipmentSets" class="btn btn-dark" style="font-weight: bold; color: white;">Equipments</a>
    </div>

    <div class="container">
        <h4 style="text-align: center;">Recently Hunted Bots</h4>

        <div class="table-responsive">
            <table class="table table-striped table-dark table-hover" id="week-kills-table">
                <thead>
                    <tr>
                        <th>Hunter Name</th>
                        <th>Bot Name</th>
                        <th>World</th>
                        <th>Comments</th>
                        <th>Kill Date</th>
                        <th>Kill Time</th>
                        <th>Loot Amount</th>
                    </tr>
                </thead>
                <tbody id="botTableBody"></tbody>
            </table>

    <!-- Modal -->
    <div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateModalLabel">Updating: <strong></strong></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/qcRoute/botUpdate">
                        <input type="hidden" name="id" />
                        <div class="form-group">
                            <label for="combat_lv">Combat Level:</label>
                            <input type="number" class="form-control" name="combat_lv" min="0" max="126" id="combat_lv" placeholder="Enter Combat Level" required maxLength="3">
                            <span id="combatLevelError" style="color:red;"></span>
                        </div>
                        <div class="form-group">
                            <label for="comments">Comments:</label>
                            <input type="text" class="form-control" name="comments" id="comments" placeholder="Enter Any Comments" maxLength="80">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/weekKillsScript.ejs'); %>
</body>
</html>

<!-- Include DataTables and jQuery scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
