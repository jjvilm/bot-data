
<!doctype html>
<html lang="en">
<%- include('../partials/headfile'); %>
<link rel="stylesheet" href="/stylesheets/botList.css" />
  <body>
    <%- include('../partials/navbar'); %>
<div class="container">
  <!-- <a href="/deDashboard/botCreate" class="btn btn-primary">Create</a> -->
  <a href="/qcDashboard" class="btn btn-primary">Recent Kills</a>
  <a href="/deDashboard/topWorlds" class="btn btn-primary">World Kills</a>
  <a href="/qcDashboard/commonlyVisitedWorlds" class="btn btn-primary">Top Worlds</a>
  <!-- <a href="/deDashboard/exportCsv" class="btn btn-primary">Export CSV</a> -->
  <!-- <a href="/deDashboard/exportExcel" class="btn btn-primary">Export Excel</a> -->
  <h1>Bot Database</h1>
        <table class="table table-striped table-dark table-hover" id="botTable">
          <thead>
            <tr>
              <th>Bot Name</th>
              <th>Combat Level</th>
              <th>Comments</th>
              <th>Worlds</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for (var i = 0; i < bots.length; i++) { %>
              <tr>
                <td><%= bots[i].bot_name %></td>
                <td><%= bots[i].combat_lv %></td>
                <td><%= bots[i].comments %></td>
                <td>
                  <a href="/deDashboard/botKills?id=<%= bots[i]._id %>" class="btn btn-primary">Kills</a>
                  <!-- <a href="/deDashboard/botDelete?id=<%= bots[i]._id %>" class="btn btn-danger">Delete</a> -->
                </td>
                <td>
                  <a href="/deDashboard/botUpdate?id=<%= bots[i]._id %>" class="btn btn-primary">Edit</a>
                  <!-- <a href="/deDashboard/botDelete?id=<%= bots[i]._id %>" class="btn btn-danger">Delete</a> -->
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
</div>


    <%- include('../partials/scripts'); %>
      <script type="text/javascript">
        $(document).ready(function() {
          $('#botTable').DataTable();
        })
      </script>
      
  </body>
</html>