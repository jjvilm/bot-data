<!DOCTYPE html>
<html lang="en">
<%- include('../partials/headfile'); %>
<link rel="stylesheet" href="/stylesheets/botList.css" />
<!-- Include DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bot Hunting Data</title>
    <style>
        h1 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #0d0c0c;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #7d7d7d;
        }
        td {
            position: relative;
            padding-right: 10px;
        }
        td .update-bot-btn {
            float: right;
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar'); %>
    <a href="/deDashboard/botList" class="btn btn-primary">All Bots</a>
    <a href="/deDashboard/topWorlds" class="btn btn-primary">World Kills</a>
    <a href="/qcDashboard/commonlyVisitedWorlds" class="btn btn-primary">Top Worlds</a>
    <a href="/deDashboard/EquipmentSets" class="btn btn-primary">Equipments</a>
    <h1>Recently Hunted Bots</h1>
    <table class="table table-striped table-dark table-hover" id="week-kills-table">
        <thead>
            <tr>
                <th>Hunter Name</th>
                <th>Bot Name</th>
                <th>World</th>
                <th>Comments</th>
                <th>Kill Date</th>
                <th>Kill Time</th>
                <th>Loot Amount</th>
            </tr>
        </thead>
        <tbody id="botTableBody"></tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateModalLabel">Updating: <strong></strong></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/qcDashboard/botUpdate">
                        <input type="hidden" name="id" />
                        <div class="form-group">
                            <label for="combat_lv">Combat Level:</label>
                            <input type="number" class="form-control" name="combat_lv" min="0" max="126" id="combat_lv" placeholder="Enter Combat Level" required maxLength="3">
                            <span id="combatLevelError" style="color:red;"></span>
                        </div>
                        <div class="form-group">
                            <label for="comments">Comments:</label>
                            <input type="text" class="form-control" name="comments" id="comments" placeholder="Enter Any Comments" maxLength="80">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

<%- include('../partials/weekKillsScript.ejs'); %>
</body>
</html>
