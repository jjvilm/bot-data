<!DOCTYPE html>
<html>
<head>
  <title>Equipment Sets</title>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="/stylesheets/equipmentCreate.css" />
    <%- include('../partials/headfile') %>
</head>
<body>
  <%- include('../partials/navbar'); %>
  <a href="/qcRoute/" class="btn btn-dark">Recent Hunts</a>
  <a href="/deRoute/botList" class="btn btn-success">All Bots</a>
    <a href="/deRoute/topWorlds" class="btn btn-secondary">World Kills</a>
    <a href="/qcRoute/commonlyVisitedWorlds" class="btn btn-danger">Top Worlds</a>

<!-- Main container with the equipment background -->
<div class="container">
  <div class="row">
    <div class="col col-md-4 .offset-md-4">
      <h1 style="
        color: rgb(52, 51, 51);
        padding: 0px;
        text-shadow: 1px 1px 0 white,-1px -1px 0 white,-1px 1px 0 white,1px -1px 0 white;">
        Equipment Sets</h1>
<div class="equipment-container">
  <!-- slots in the grid -->
  <div class="grid-container">
    <!-- Left column -->
    <div class="left-column">
      <div class="slot cape-slot"> <!-- Added class name -->
        <img id="cape-img" src="/images/Bank_filler.png" class="slot-img" alt="Cape" onclick="findItem('cape')">
      </div>
      <div class="slot left-hand-slot"> <!-- Added class name -->
        <img id="left_hand-img" src="/images/Bank_filler.png" alt="Left-Hand" class="slot-img" onclick="findItem('left_hand')">
      </div>
      <div class="slot hands-slot"> <!-- Added class name -->
        <img id="hands-img" src="/images/Bank_filler.png" alt="Hands" class="slot-img" onclick="findItem('hands')">
      </div>
    </div>

    <!-- Middle column -->
    <div class="middle-column">
      <div class="slot head-slot"> <!-- Added class name -->
        <img id="head-img" src="/images/Bank_filler.png" alt="Head" class="slot-img" onclick="findItem('head')">
      </div>
      <div class="slot neck-slot"> <!-- Added class name -->
        <img id="neck-img" src="/images/Bank_filler.png" alt="Neck" class="slot-img" onclick="findItem('neck')">
      </div>
      <div class="slot torso-slot"> <!-- Added class name -->
        <img id="torso-img" src="/images/Bank_filler.png" alt="Torso" class="slot-img" onclick="findItem('torso')">
      </div>
      <div class="slot legs-slot"> <!-- Added class name -->
        <img id="legs-img" src="/images/Bank_filler.png" alt="Legs" class="slot-img" onclick="findItem('legs')">
      </div>
      <div class="slot feet-slot"> <!-- Added class name -->
        <img id="feet-img" src="/images/Bank_filler.png" alt="Feet" class="slot-img" onclick="findItem('feet')">
      </div>
    </div>

    <!-- Right column -->
    <div class="right-column">
      <div class="slot ammunition-slot"> <!-- Added class name -->
        <img id="ammunition-img" src="/images/Bank_filler.png" alt="Ammunition" class="slot-img" onclick="findItem('ammunition')">
      </div>
      <div class="slot right-hand-slot"> <!-- Added class name -->
        <img id="right_hand-img" src="/images/Bank_filler.png" alt="Right-Hand" class="slot-img" onclick="findItem('right_hand')">
      </div>
      <div class="slot jewelry-slot"> <!-- Added class name -->
        <img id="jewelry-img" src="/images/Bank_filler.png" alt="Jewelry" class="slot-img" onclick="findItem('jewelry')">
      </div>
    </div>
  </div>
  </div>
    </div>
    <div class="col">
      <h1 style="
        color: rgb(52, 51, 51);
        padding: 0px;
        text-shadow: 1px 1px 0 white,-1px -1px 0 white,-1px 1px 0 white,1px -1px 0 white;">
        Apply Equipment Sets</h1>
      <div id="bot-selection-container">
        <!-- Dropdown to select a bot -->
        <label for="bot-select"></label>
        <select id="bot-select">
          <option value="" disabled selected>Select a bot</option>
        </select>
      
        <!-- Apply button -->
        <button id="apply-button">Apply</button>
      
        <!-- Success message -->
        <label id="apply-success-message" style="display: none; color: green;">Successfully applied!</label>
      </div>
    </div>

  <div class="row">
    <div class="col">
      <br>
      <!-- Second container for existing equipment sets -->
      <!-- Button to create a new equipment set -->
      <button onclick="openCreateModal()">New Set</button>
      <div id="createModal" style="display:none;">
          <!-- Modal content -->
        <h2>Create New Equipment Set</h2>
        
        <label for="set_name">Set Name:</label>
        <input type="text" id="set_name">
        
        <button onclick="createEquipmentSet()">Save</button>
      </div>
      <!-- Success label to display after successful save -->
      <div id="success-label" style="display: none; color: green; font-weight: bold;"></div>
      <h2 style="color: rgb(52, 51, 51);padding: 0px;text-shadow: 1px 1px 0 white,-1px -1px 0 white,-1px 1px 0 white,1px -1px 0 white;">
      Existing Equipment Sets</h2>
      <div id="equipment-sets">
        <!-- Fetched sets will be displayed here -->
         
         <!-- New logic ends here  -->

  </div>
</div>
    </div>
</div>

  


</body>
<%- include('../partials/equipmentSetCreateScript.ejs'); %>
</html>
